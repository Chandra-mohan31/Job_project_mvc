<h1>Create a Job</h1>

<form method="post">

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Name" value="" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job category</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="category" value="" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Employeer Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Employeer Name" value="" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Description</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Description" value="" required />
        </div>
    </div>
    <div>
        <button type="submit" class="btn-primary btn-sm style=" text-decoration: none"">Submit</button>
    </div>

</form>