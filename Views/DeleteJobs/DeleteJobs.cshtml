<h1>Delete Page</h1>
@{
    Jobs job = (Jobs)ViewData["job"];
}

<table class="table">
    <thead>
        <tr>
            <th>Job ID</th>
            <th>Job Name</th>
            <th>Job Description</th>
            <th>Job Employeer Name</th>
            <th>Job Category</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@job.Id</td>
            <td>@job.Name</td>
            <td>@job.Description</td>
            <td>@job.employeerName</td>
            <td>@job.category</td>
        </tr>
    </tbody>
</table>
<p>Confirm to delete this Job?</p>
<div>
    <form method="post">
        <input type="text" class="form-control" name="Id" value="@job.Id" hidden required />
        <button type="submit" class="btn btn-primary btn-sm">Yes</button>
    </form>
    <a href="/ViewJobs/ViewJobs"><button class="btn btn-danger">No</button></a>
</div>