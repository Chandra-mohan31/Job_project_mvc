@{
}
<p>Welcome JobSeekers</p>

@{
    ViewData["Title"] = "View Jobs";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
 

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Filter</label>
        <div class="col-sm-4">
            <select id="filter" name="filter">
                <option value="category">Category</option>
                <option value="jobName">Job Name</option>
                <option value="employeer">Employeer</option>
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Enter Value</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Val" value="" />
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Search</button>
    <a class="btn btn_primary text-decoration-none border-2 border-secondary" href="ViewJobs">Remove filter</a>
  </form>
<table class="table">
    <thead>
        <tr>
            <th>Job ID</th>
            <th>Job Name</th>
            <th>Job Description</th>
            <th>Job Employeer Name</th>
            <th>Job Category</th>
        </tr>
    </thead>

    @foreach (var job in (List<Jobs>)ViewData["jobsList"])
    {
        <tr>
            <td>@job.Id</td>
            <td>@job.Name</td>
            <td>@job.Description</td>
            <td>@job.employeerName</td>
            <td>@job.category</td>
        </tr>
    }
</table>